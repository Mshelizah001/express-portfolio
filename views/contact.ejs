<!-- views/contact.ejs -->
<!-- Contact Page: Allows users to reach out  -->

<section class="container py-5" style="max-width: 860px;">
  <h2 class="fw-bold mb-3 text-center">Let’s Chat</h2>
  <p class="text-muted mb-4 text-center">Questions or collabs? Send a quick note and I’ll reply.</p>

  <!-- Success message after form submission -->
  <% if (typeof message !== 'undefined' && message) { %>
    <div class="alert alert-success text-center"><%= message %></div>
  <% } %>

  <!-- Bootstrap contact form -->
  <form action="/contact" method="post" novalidate class="row g-3">
    <!-- Name -->
    <div class="col-md-6">
      <label class="form-label" for="name">Name</label>
      <input id="name" name="name" type="text" class="form-control" required>
    </div>

    <!-- Email -->
    <div class="col-md-6">
      <label class="form-label" for="email">Email</label>
      <input id="email" name="email" type="email" class="form-control" required>
    </div>

    <!-- Phone -->
    <div class="col-md-6">
      <label class="form-label" for="phone">Cell No.</label>
      <input id="phone" name="phone" type="tel" class="form-control">
    </div>

    <!-- Message -->
    <div class="col-12">
      <label class="form-label" for="msg">Comments</label>
      <textarea id="msg" name="message" rows="5" class="form-control" required></textarea>
    </div>

    <!-- Submit button -->
    <div class="col-12 text-center">
      <button type="submit" class="btn btn-dark px-4">
        <i class="fa-regular fa-paper-plane me-2"></i>Send Message
      </button>
    </div>
  </form>
</section>

<!-- Custom CSS files -->
<link rel="stylesheet" href="/css/style.css">
<link rel="stylesheet" href="/Gallery/mobile.css" media="(max-width: 599px)">
<link rel="stylesheet" href="/Gallery/tablet.css" media="(min-width: 600px) and (max-width: 1023px)">
<link rel="stylesheet" href="/Gallery/desktop.css" media="(min-width: 1024px)">
